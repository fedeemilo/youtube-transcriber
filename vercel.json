{
    "version": 2,
    "builds": [
        {
            "src": "next.config.js",
            "use": "@vercel/node"
        },
        {
            "src": "scripts/transcribe.py",
            "use": "@vercel/node",
            "config": {
                "permissions": {
                    "scripts/transcribe.py": "755"
                }
            }
        },
        {
            "src": "scripts/translate.py",
            "use": "@vercel/node",
            "config": {
                "permissions": {
                    "scripts/translate.py": "755"
                }
            }
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        },
        {
            "src": "package.json",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/$1"
        },

        {
            "src": "/favicon.ico",
            "dest": "/favicon.ico"
        },
        {
            "src": "/public/(.*)",
            "dest": "/public/$1"
        },
        {
            "src": "/_next/(.*)",
            "dest": "/_next/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },

        {
            "src": "/",
            "dest": "/index.html"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/pages/api/$1"
        }
    ]
}
