{
    "version": 2,
    "builds": [
        {
            "src": "next.config.js",
            "use": "@vercel/node"
        },
        {
            "src": "scripts/transcribe.py",
            "use": "@vercel/node",
            "config": {
                "permissions": {
                    "scripts/transcribe.py": "755"
                }
            }
        },
        {
            "src": "scripts/translate.py",
            "use": "@vercel/node",
            "config": {
                "permissions": {
                    "scripts/translate.py": "755"
                }
            }
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        },
        {
            "src": "package.json",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/public/:path*",
            "destination": "/public/:path*"
        },
        {
            "source": "/(.*)",
            "destination": "/pages/index.js"
        },
        {
            "source": "/:slug/",
            "destination": "/pages/:slug.js"
        }
    ]
}
