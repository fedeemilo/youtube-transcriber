{
    "version": 2,
    "builds": [
        {
            "src": "next.config.js",
            "use": "@vercel/node"
        },
        {
            "src": "scripts/transcribe.py",
            "use": "@vercel/node",
            "config": {
                "permissions": {
                    "scripts/transcribe.py": "755"
                }
            }
        },
        {
            "src": "scripts/translate.py",
            "use": "@vercel/node",
            "config": {
                "permissions": {
                    "scripts/translate.py": "755"
                }
            }
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/"
        },
        {
            "src": "/favicon.ico",
            "dest": "/favicon.ico"
        },
        {
            "src": "/public/(.*)",
            "dest": "/public/$1"
        }
    ],
    "public": "./public"
}
