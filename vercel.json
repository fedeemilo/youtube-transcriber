{
    "version": 2,
    "builds": [
        {
            "src": "next.config.js",
            "use": "@vercel/node"
        },
        {
            "src": "scripts/transcribe.py",
            "use": "@vercel/node",
            "config": {
                "permissions": {
                    "scripts/transcribe.py": "755"
                }
            }
        },
        {
            "src": "scripts/translate.py",
            "use": "@vercel/node",
            "config": {
                "permissions": {
                    "scripts/translate.py": "755"
                }
            }
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        },
        {
            "src": "package.json",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/favicon.ico",
            "destination": "/favicon.ico"
        },
        {
            "source": "/public/:path*",
            "destination": "/public/:path*"
        },
        {
            "source": "/_next/:path*",
            "destination": "/_next/:path*"
        },
        {
            "source": "/api/:path*",
            "destination": "/api/:path*"
        },
        {
            "source": "/:path*",
            "destination": "/index.html"
        },
        {
            "source": "/(.*)",
            "destination": "/pages/$1"
        }
    ]
}
